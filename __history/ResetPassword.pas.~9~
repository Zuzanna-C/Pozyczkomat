unit ResetPassword;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls,
  System.Hash, DataModule;

type
  TForm3 = class(TForm)
    PBackground: TPanel;
    LResetPass: TLabel;
    LUsername: TLabel;
    LNewPass: TLabel;
    EUsername: TEdit;
    ENewPass: TEdit;
    BClose: TButton;
    BReset: TButton;
    procedure BResetClick(Sender: TObject);
  private
    { Private declarations }
    procedure ResetPassword(const Username, NewPassword: string);
  public
    { Public declarations }
  end;

var
  DataModule1: TDataModule1;

implementation

procedure TForm3.BResetClick(Sender: TObject);
var
  Username, NewPass, HashedPass: string;
begin
  Username := Trim(EUsername.Text);
  NewPass := Trim(ENewPass.Text);

  if (Username = '') or (NewPass = '') then
  begin
    ShowMessage('Proszê podaæ zarówno nazwê u¿ytkownika, jak i nowe has³o.');
    Exit;
  end;

  HashedPass := UpperCase(THashSHA2.GetHashString(NewPass));

  try
    ResetPassword(Username, HashedPass);
  except
    on E: Exception do
      ShowMessage('B³¹d podczas resetowania has³a: ' + E.Message);
  end;
end;

procedure TForm3.ResetPassword(const Username, NewPassword: string);
begin
  with DataModule1.FDQuery1 do
  begin
    Close;
    SQL.Text := 'SELECT COUNT(*) FROM Users WHERE Username = :u';
    ParamByName('u').AsString := Username;
    Open;

    if Fields[0].AsInteger = 0 then
    begin
      ShowMessage('U¿ytkownik o podanej nazwie nie istnieje.');
      Exit;
    end;

    Close;
    SQL.Text := 'UPDATE Users SET Password = :p WHERE Username = :u';
    ParamByName('p').AsString := NewPassword;
    ParamByName('u').AsString := Username;
    ExecSQL;

    ShowMessage('Has³o zosta³o zresetowane pomyœlnie.');
  end;
end;


end.
