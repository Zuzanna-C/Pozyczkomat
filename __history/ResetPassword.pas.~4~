unit ResetPassword;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls,
  System.Hash, DataModule;

type
  TForm3 = class(TForm)
    PBackground: TPanel;
    LResetPass: TLabel;
    LUsername: TLabel;
    LNewPass: TLabel;
    EUsername: TEdit;
    ENewPass: TEdit;
    BClose: TButton;
    BReset: TButton;
  private
    { Private declarations }
    procedure ResetPassword(const Username, NewPassword: string);
  public
    { Public declarations }
  end;

var
  Form3: TForm3;

implementation

procedure TForm3.BResetClick(Sender: TObject);
var
  Username, NewPass, HashedPass: string;
begin
  Username := Trim(EUsername.Text);
  NewPass := Trim(ENewPass.Text);

  if (Username = '') or (NewPass = '') then
  begin
    ShowMessage('Proszê podaæ zarówno nazwê u¿ytkownika, jak i nowe has³o.');
    Exit;
  end;

  HashedPass := UpperCase(THashSHA2.GetHashString(NewPass));

  try
    ResetPassword(Username, HashedPass);
  except
    on E: Exception do
      ShowMessage('B³¹d podczas resetowania has³a: ' + E.Message);
  end;
end;

procedure TForm3.ResetPassword(const Username, NewPassword: string);
var
  FDConnection: TFDConnection;
  FDQuery: TFDQuery;
begin
  FDConnection := TFDConnection.Create(nil);
  FDQuery := TFDQuery.Create(nil);
  try
    FDConnection.Params.DriverID := 'SQLite';
    FDConnection.Params.Database := ExtractFilePath(ParamStr(0)) + 'pozyczkomat.db';
    FDConnection.LoginPrompt := False;
    FDConnection.Connected := True;

    FDQuery.Connection := FDConnection;

    FDQuery.SQL.Text := 'SELECT COUNT(*) FROM Users WHERE Username = :u';
    FDQuery.ParamByName('u').AsString := Username;
    FDQuery.Open;
    if FDQuery.Fields[0].AsInteger = 0 then
    begin
      ShowMessage('U¿ytkownik o podanej nazwie nie istnieje.');
      Exit;
    end;

    FDQuery.Close;
    FDQuery.SQL.Text := 'UPDATE Users SET Password = :p WHERE Username = :u';
    FDQuery.ParamByName('p').AsString := NewPassword;
    FDQuery.ParamByName('u').AsString := Username;
    FDQuery.ExecSQL;

    ShowMessage('Has³o zosta³o zresetowane pomyœlnie.');
  finally
    FDQuery.Free;
    FDConnection.Free;
  end;
end;

end.
